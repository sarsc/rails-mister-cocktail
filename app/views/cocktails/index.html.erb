<div class="main-container">
  <div class="cocktail-container">
    <% @cocktails.each do |cocktail| %>
      <div data-aos="fade-up"class="cocktail-card">
        <% if cocktail.photo.blank? %>
          <div class="default-img banner">
            <div class="card-cocktail-infos">
              <h1><%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-name" %></h1>
            </div>
          </div>
        <% else %>
          <div class="banner" style="background-image: linear-gradient(rgba(226,226,226,0.3), rgba(226,226,226,0.3)), url(<%= cl_image_path cocktail.photo, height: 400, width: 500, crop: :fill  %>)">
            <div class="card-cocktail-infos">
              <h1><%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-name" %></h1>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


