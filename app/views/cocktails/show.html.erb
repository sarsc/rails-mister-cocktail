<div>
  <div class="banner-img">
    <h1 ><%= @cocktail.name %></h1>
  </div>

  <div class="cocktail-container">
    <% @cocktail.doses.each do |dose| %>
      <div class="">
        <h3>Ingredients</h3>
        <div class="">
          <p><%= dose.ingredient.name %></p>
          <p><%= dose.description %></p>
          <%= link_to "Remove ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>

  <p><%=link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>
  <p><%=link_to "Add cocktail", cocktails_path%></p>

</div>

